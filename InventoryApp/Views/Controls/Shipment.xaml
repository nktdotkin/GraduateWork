<UserControl x:Class="InventoryApp.Views.Controls.Shipment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryApp.ViewModels.Product"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ShipmentViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid Margin="0,180,0,0">
            <DataGrid Width="800" HorizontalAlignment="Left" Style="{StaticResource DataGridStyle}" ItemsSource="{Binding ShipmentModels}" SelectedItem="{Binding SelectedItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Date}" Header="Date"/>
                    <DataGridTextColumn Binding="{Binding Path=Amount}" Header="Amount"/>
                    <DataGridTextColumn Binding="{Binding Path=Product.Id}" Header="Product"/>
                    <DataGridTextColumn Binding="{Binding Path=Product.Name}" Header="Product"/>
                    <DataGridTextColumn Binding="{Binding Path=Product.Description}" Header="Product"/>
                    <DataGridTextColumn Binding="{Binding Path=Product.Price}" Header="Product"/>
                    <DataGridTextColumn Binding="{Binding Path=Product.Tax}" Header="Product"/>
                    <DataGridTextColumn Binding="{Binding Path=Product.TotalPrice}" Header="Product"/>
                    <DataGridTextColumn Binding="{Binding Path=Product.Group}" Header="Product"/>
                    <DataGridTextColumn Binding="{Binding Path=Client.Id}" Header="Client"/>
                    <DataGridTextColumn Binding="{Binding Path=Client.Name}" Header="Client"/>
                    <DataGridTextColumn Binding="{Binding Path=Client.Surname}" Header="Client"/>
                    <DataGridTextColumn Binding="{Binding Path=Client.Phone}" Header="Client"/>
                    <DataGridTextColumn Binding="{Binding Path=Client.Adress}" Header="Client"/>
                    <DataGridTextColumn Binding="{Binding Path=Client.Email}" Header="Client"/>
                    <DataGridTextColumn Binding="{Binding Path=Client.Status}" Header="Client"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
